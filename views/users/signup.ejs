<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <h1 class="col-6 offset-3">Signup</h1>
        <div class="col-6 offset-3 ">
            <form action="/signup" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input name="username" placeholder="" id="username" type="text" class="form-control" required>
                    <div class="invalid-feedback">
                        Please enter a username.
                    </div>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input name="email" placeholder="" id="email" type="text" class="form-control" required>

                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input name="password" placeholder="" id="password" type="text" class="form-control" required>
                    <div class="invalid-feedback">
                        Please enter a password.
                    </div>
                </div>
                <button class="btn btn-success">Signup</button>
            </form>
        </div>

    </div>